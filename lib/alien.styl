html,body
  background #ffda5b
  height 100%
  width 100% 
#wrap
  background #ffda5b
  height 100%
  width 100% 
#map 
     height 60%
#menu ul
    display flex
    justify-content space-between
    margin 0 auto
    top 5px 
    width 100% 
    z-index 10
#menu li
      background #f6db05 
      border 2px solid #bfac84
      border-radius 4px
      cursor pointer
      font  1.4em "Helvetica",Arial
      line-height normal
      padding 1em
      text-align center
      width 14%
#menu li.selected:hover, #menu li:hover
      background #f9f0a4
#menu li a 
  color #674b3f
.paul
  left 5%
  position absolute
  top 60px
.oval
  background: white;
  border: solid #5f6247;
  border-radius: 5px;
  height: 80px;
  margin 0 0 0 130px
  padding: 10px;
  position: absolute;
  width: 250px;
.oval:before
  border-top: 13px solid transparent;
  border-right: 26px solid #5f6247;
  border-bottom: 13px solid transparent;
  content:"";
  height: 0;
  position: absolute;
  top: 26px;
  right: 100%;
  width: 0;
#saludo
  font-style italic
  font-weight bold
pre.ui-distance 
  backgroundrgba(0,0,0,0.5)
  border-radius 3px
  bottom 10px
  color #fff
  left 10px
  line-height 18px
  padding5px 10px
  position absolute
footer h2
  color white
  font-family 'Alfa Slab One', cursive
  font-size 12em
  margin 0.3em auto
  text-align center
  text-weight bold
footer p
  color white
.tracktitle, .authortitle
  font-family Arial
  font-size 0.16em
  position absolute
  text-align left
  top 0
.tracktitle
  margin 2.6em 0 0 570px
  left 0
.authortitle
  margin 4em 0 0 570px
  left 0
  width 200px
footer section
  margin -50px 0 0 0
  text-align center
footer section p
    font-size 2em
  
@media only screen and (max-width:1280px)
    #menu ul
      display inline-block
    #menu li
      display inline-block
      margin 0 0.2%
      width 32%
@media only screen and (max-width:1200px)
    .tracktitle, .authortitle
      display inline 
      position absolute
      text-align center
      width 50%
    .authortitle
       margin 7em 15%
    .tracktitle
        margin 7em 35%
    footer section
      margin 0
@media only screen and (max-width:685px)
  #menu li
      font-size 1em
      height 70px
      vertical-align middle
  footer h2
    font-size 6em
@media only screen and (max-width:480px)
    #menu ul
      display flex
      flex-direction column
    #menu li
      font-size 1.3em
      height 50px
      margin 0 auto
      width 100%